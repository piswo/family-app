
<h1>家族一覧</h1>

    <ul class="users">
      <% @users.each do |user| %>
        <li>
          <%= gravatar_for(user) %>
          <%= link_to user.name, user %>
          <% if current_user.admin? %>
            <%= link_to "削除", user, method: :delete,
                  data: { confirm: "本当に削除しますか？" }%>
          <% end %>
        </li>
      <% end %>
    </ul>
